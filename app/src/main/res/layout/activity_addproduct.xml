<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Addproduct"
    android:id="@+id/relativeLayout4">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/gname_label"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_edit_text"

        android:paddingBottom="8dp"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="productname"
            android:inputType="text"
            android:paddingBottom="5dp" />


    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/stock_label"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_edit_text"

        android:paddingBottom="3dp"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gname_label">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/pri"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="stock"
            android:inputType="number" />


    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/price_label"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"

        android:background="@drawable/round_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stock_label">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/stock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="price" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/btnaddProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="61dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_button"
        android:onClick="confirminput"
        android:text="ADD PRODUCT"

        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_label"
        app:layout_constraintVertical_bias="0.313"
        tools:ignore="OnClick" />


</android.support.constraint.ConstraintLayout>